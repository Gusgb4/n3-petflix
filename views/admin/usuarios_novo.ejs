<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Novo Usuário - MFlix</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="fundo-1 min-h-screen">
    <!-- Barra de menu horizontal -->
    <nav class="bg-main-color shadow-lg w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">

            <div><img src="/images/logo-branco.png" class="flex items-center w-16 tira-margem-padding" alt="Logo" /></div>
                <!-- Menu à esquerda -->

                <div class="flex space-x-8 items-center">
                    <a href="/admin/usuarios" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Usuários</a>
                    <a href="/admin/categorias" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Categorias</a>
                    <a href="/admin/forum" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Forum</a>
                    <a href="/admin/videos" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Vídeos</a>
                    <a href="/admin/sair" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Sair</a>
                </div>
                <!-- Nome do administrador à direita -->
                <div class="flex items-center">
                    <span class="text-white text-sm font-medium"> 
                        <%= admNome %>
                    </span>
                </div>
            </div>
        </div>
    </nav>

  <!-- Formulário de novo usuário -->
  <main class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h1 class="text-xl font-bold text-white mb-4">Adicionar Novo Usuário</h1>

      <% if (mensagem) { %>
        <p class="mb-4 text-sm font-medium text-<%= sucesso ? 'green' : 'red' %>-400"><%= mensagem %></p>
      <% } %>

      <form action="/admin/novousuario" method="POST">
        <div class="mb-4">
          <label for="email" class="block text-gray-300 mb-2">Email</label>
          <input type="email" id="email" name="email" class="w-full bg-gray-700 text-white border border-gray-600 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-main-color" required>
        </div>
        <div class="mb-6">
          <label for="senha" class="block text-gray-300 mb-2">Senha</label>
          <input type="password" id="senha" name="senha" class="w-full bg-gray-700 text-white border border-gray-600 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-main-color" required>
        </div>
        <div class="flex justify-end space-x-4">
          <a href="/admin/usuarios" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md transition duration-200">Fechar</a>
          <button type="submit" class="bg-main-color hover:bg-blue-700 text-white px-4 py-2 rounded-md transition duration-200">Gravar novo usuário</button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
