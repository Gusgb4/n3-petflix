<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard do Administrador</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="fundo-1 min-h-screen">
    <nav class="bg-main-color shadow-lg w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div><img src="/images/logo-branco.png" class="flex items-center w-16 tira-margem-padding" alt="Logo" /></div>

        <div class="flex space-x-8 items-center">
          <a href="/admin/usuarios" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Usuários</a>
          <a href="/admin/categorias" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Categorias</a>
          <a href="/admin/forum" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Fórum</a>
          <a href="/admin/videos" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Vídeos</a>
          <a href="/admin/sair" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Sair</a>
        </div>

        <div class="flex items-center">
          <span class="text-white text-sm font-medium"><%= admNome %></span>
        </div>
      </div>
    </div>
  </nav>

  <!-- CONTEÚDO PRINCIPAL -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="w-full bg-gray-800 p-6 rounded-lg shadow-lg">

      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-white">Tópicos do Fórum</h2>
      </div>

      <!-- MENSAGEM -->
      <% if (mensagem) { %>
        <p class="<%= sucesso ? 'text-green-400' : 'text-red-400' %> mb-4"><%= mensagem %></p>
      <% } %>

      <div class="shadow-md mb-6 overflow-x-auto">
        <table class="w-full text-gray-300 text-sm">
          <thead>
            <tr class="bg-gray-700">
              <th class="px-4 py-2">Título</th>
              <th class="px-4 py-2">Autor</th>
              <th class="px-4 py-2">Categoria</th>
              <th class="px-4 py-2">Data</th>
              <th class="px-4 py-2">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% topicos.forEach(function(topico) { %>
              <tr class="border-b border-gray-700 hover:bg-gray-700">
                <td class="px-4 py-2 text-white"><%= topico.fortitulo %></td>
                <td class="px-4 py-2"><%= topico.autor %></td>
                <td class="px-4 py-2"><%= topico.catforum %></td>
                <td class="px-4 py-2"><%= new Date(topico.fordata).toLocaleString() %></td>
                <td class="px-4 py-2 text-right">
                  <a href="/admin/excluirtopico/<%= topico.codtopico %>" class="text-red-400 hover:text-red-300" onclick="return confirm('Deseja mesmo excluir este tópico?')">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <a href="/admin/dashboard" class="text-blue-400 hover:underline">&larr; Voltar ao Dashboard</a>
      </div>
    </div>
  </main>
</body>
</html>