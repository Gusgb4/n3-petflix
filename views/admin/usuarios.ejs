<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento de Usuários e Perfis</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="fundo-1 min-h-screen">
    <!-- Barra de menu horizontal -->
    <nav class="bg-main-color shadow-lg w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">

            <div><img src="/images/logo-branco.png" class="flex items-center w-16 tira-margem-padding" alt="Logo" /></div>
                <!-- Menu à esquerda -->

                <div class="flex space-x-8 items-center">
                    <a href="/admin/usuarios" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Usuários</a>
                    <a href="/admin/categorias" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Categorias</a>
                    <a href="/admin/forum" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Forum</a>
                    <a href="/admin/videos" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Vídeos</a>
                    <a href="/admin/sair" class="text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Sair</a>
                </div>
                <!-- Nome do administrador à direita -->
                <div class="flex items-center">
                    <span class="text-white text-sm font-medium"> 
                        <%= admNome %>
                    </span>
                </div>
            </div>
        </div>
    </nav>

        <!-- Mensagem -->
    <% if (mensagem) { %>
    <p class="<%= sucesso ? 'text-green-400' : 'text-red-400' %> mb-4"><%= mensagem %></p>
    <% } %>


    

    <!-- Conteúdo principal -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Browse de Usuários (Esquerda) -->
        <div class="w-6/6 bg-gray-800 p-6 rounded-lg shadow-lg">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-white">Usuários</h2>
                <a href="/admin/novousuario"
                    class="bg-main-color hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200">Incluir
                    Usuário</a>
            </div>
            <div class="shadow-md mb-6">
                <table class="w-full items-center text-gray-300">
                    <thead>
                        <tr class="bg-gray-700">
                            <th class="px-4 py-2 w-8">Id</th> <!-- Coluna para a seta -->
                            <th class="px-4 py-2">Email</th>
                            <th class="px-4 py-2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(function(usuario) { %>
                            <tr class="border-b border-gray-700 hover:bg-gray-700 'bg-gray-600' border">
                                <td class="px-4 py-2 text-white">
                                    <%= usuario.usucodigo %>
                                </td>
                                <td class="px-4 py-2">
                                    <a href="/admin/perfis/<%= usuario.usucodigo %>"
                                        class="text-blue-400 hover:text-blue-300">
                                        <%= usuario.usuemail %>
                                    </a>
                                </td>
                                <td class="px-4 py-2 text-right">
                                    <a href="/admin/atualizarusuario/<%= usuario.usucodigo %>"
                                        class="text-blue-400 hover:text-blue-300 mr-2">Atualizar</a>
                                    <a href="/admin/excluirusuario/<%= usuario.usucodigo %>"
                                        class="text-red-400 hover:text-red-300">Excluir</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>
</html>